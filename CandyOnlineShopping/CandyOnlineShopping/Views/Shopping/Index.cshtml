
@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Candy</th>
            <th class="text-right">Price</th>
            <th class="text-right">SubTotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model.ShoppingCart)
        {

            <tr>
                <td class="text-left"> <a asp-controller="Shopping"
                                          asp-action="RemoveFromShoppingCart" 
                                          asp-route-candyId="@item.Candy.Id">Remove</a></td>

                <td class="text-centre">@item.Amount</td>
                <td class="text-left">@item.Candy.Name</td>
                <td class="text-right">@item.Candy.Price.ToString("c")</td>
                <td class="text-right">
                    @((item.Amount * item.Candy.Price).ToString("c"))
                </td>
                
            </tr>

            
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-centre">
    <a class="btn btn-primary" asp-controller="Shopping" asp-action="ClearCart">Clear Cart</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">CheckOut</a>
</div>
